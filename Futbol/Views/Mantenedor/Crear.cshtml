@model Equipo



<h2>Nuevo Equipo</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Ciudad">Ciudad</label>
        <input asp-for="Ciudad" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Estadio">Estadio</label>
        <input asp-for="Estadio" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Entrenador">Entrenador</label>
        <input asp-for="Entrenador" class="form-control" />
    </div>

    <!-- Campo de entrada de texto para las ligas -->
    
   

    <!-- Lista de ligas agregadas -->
    <div class="form-group">
            <div class="form-group">
                <label asp-for="Ligas">Ligas</label>
                <input asp-for="Ligas" class="form-control" multiple />
            </div>

    </div>

    
    <button type="submit"  class="btn btn-primary">Guardar</button>
</form>

