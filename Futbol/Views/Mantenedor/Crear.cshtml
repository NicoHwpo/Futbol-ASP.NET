@model Equipo



<h2>Nuevo Equipo</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Ciudad">Ciudad</label>
        <input asp-for="Ciudad" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Estadio">Estadio</label>
        <input asp-for="Estadio" class="form-control" required  />
    </div>

    <div class="form-group">
        <label asp-for="Entrenador">Entrenador</label>
        <input asp-for="Entrenador" class="form-control" required />
    </div>

    <!-- Lista de ligas agregadas -->
    <div class="form-group">
            <div class="form-group">
                <label asp-for="Ligas">Ligas En las que Juega</label>
            <input asp-for="Ligas" class="form-control" multiple required />
            </div>

    </div>

    
    <button type="submit"  class="btn btn-primary">Guardar</button>
</form>

